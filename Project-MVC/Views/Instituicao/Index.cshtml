@model IEnumerable<Project_MVC.Models.Instituicao>
@{
    Layout = "_Layout";
}

@section styles {
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/lib/datatables/css/jquery.dataTables.min.css" />
}

<div class="card-block">
    <div class="card-header text-white bg-primary text-center h1">
        Instituições Registradas
    </div>
    <div class="card-body">
        <table id="tabela_instituicoes">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.InstituicaoID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Endereco)
                    </th>
                    <th>
                        Ações
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.InstituicaoID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Endereco)
                        </td>
                        <td>
                            <button class="btn-primary"><a asp-action="Edit" asp-route-id="@item.InstituicaoID">Edit</a></button> |
                            <button class="btn-info"><a class="btn-info" asp-action="Details" asp-route-id="@item.InstituicaoID">Details</a> </button> |
                            <button class="btn-danger"><a class="btn-danger" asp-action="Delete" asp-route-id="@item.InstituicaoID">Delete</a></button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="card-footer bg-success text-center">
        <a asp-action="Create" class="btn-success">
            Criar uma nova
            instituição
        </a>
    </div>
</div>

@section ScriptPage{
    <script src="~/lib/datatables/js/dataTables.dataTables.min.js"></script>
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#tabela_instituicoes').DataTable();
        });
    </script>
}



